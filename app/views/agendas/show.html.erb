<div class="container agenda">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        
        <div class="col-md-3">
          <ul class="nav nav-pills nav-stacked sidenav">
            <% Agenda.all.each_with_index do |a| %>
              <li<%= "class=\"active\"" if (a == @agenda) %>>
                <%= link_to a.name, agenda_path(a) %>
              </li>
            <% end %>
          </ul>
        </div>

        <div class="col-md-9">
         <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th><%= t 'schedual.time' %></th>
                <th><%= t 'schedual.content' %></th>
                <th><%= t 'schedual.speaker' %></th>
              </tr>
            </thead>
            <tbody>
              <% @agenda.scheduals.each_with_index do |s, i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= s.time %></td>
                  <td><%= s.content %></td>
                  <td><%= s.speaker %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="container speakers">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <% (1..12).each do |i| %>
          <div class="col-md-3 speaker">
            <a class="thumbnail" href="#" data-toggle="modal" data-target="#modalSpeaker<%= i %>">
              <%= image_tag "http://www.avatarpro.biz/avatar?s=128&rnd=#{rand}", class: 'img-circle', size: '128x128'  %>
              <div class="caption">
                <h4>Name Here</h4>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% (1..12).each do |i| %>
  <div class="modal fade" id="modalSpeaker<%= i %>" tabindex="-1" role="dialog" aria-labelledby="modalSpeakerLabel<%= i %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalSpeakerLabel<%= i %>">Modal title</h4>
        </div>
        <div class="modal-body">
          ...
        </div>
      </div>
    </div>
  </div>
<% end %>
